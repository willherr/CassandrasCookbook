@inject NavigationManager NavigationManager

<MatCard>    
    <MatCardContent>
        <MatBody1 Class="pl-1 my-2" Style="display: flex; align-items: center;">
            <MatHeadline6 Class="m-0">Step @StepNumber&nbsp;</MatHeadline6>
            @if (!string.IsNullOrEmpty(Step.Subtitle))
            {
                <MatSubtitle1 Class="m-0">-&nbsp;@Step.Subtitle</MatSubtitle1>
            }
        </MatBody1>
        @if (!string.IsNullOrEmpty(Step.ImageUrl))
        {
            <MatCardMedia Wide="true" ImageUrl="@Step.ImageUrl"></MatCardMedia>
        }
        <MatBody1 Class="pl-1 pr-1">
            @Step.Instructions
        </MatBody1>
    </MatCardContent>
</MatCard>

@code {
    [Parameter]
    public Step Step { get; set; }

    [Parameter]
    public int StepNumber { get; set; }
}
